<%= stylesheet_link_tag "show", "data-turbo-track": "reload" %>

<div class="container mt-5">
  <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
    <div class="row g-0">
      <div class="col-md-5 bg-light d-flex justify-content-center align-items-center p-5">
        <% if @banner.preview.present? %>
          <%= image_tag @banner.preview.url, class: "img-fluid rounded", alt: @banner.status.humanize %>
        <% else %>
          <div class="d-flex flex-column align-items-center">
            <div class="text-muted fs-1">ðŸ“·</div>
            <p class="text-muted mt-2">No Preview Available</p>
          </div>
        <% end %>
      </div>

      <div class="col-md-7 p-4 d-flex flex-column justify-content-center align-items-center">
        <h2 class="fw-bold mb-4 text-center">Banner Details</h2>

        <div class="row mb-3 justify-content-center">
          <div class="col-6 mb-2">
            <p class="text-muted mb-1">Online At</p>
            <p class="fw-semibold text-center"><%= @banner.online_at %></p>
          </div>
          <div class="col-6 mb-2">
            <p class="text-muted mb-1">Offline At</p>
            <p class="fw-semibold text-center"><%= @banner.offline_at %></p>
          </div>
          <div class="col-6 mb-2">
            <p class="text-muted mb-1">Status</p>
            <span class="badge <%= @banner.status == 'active' ? 'bg-success' : 'bg-secondary' %>">
        <%= @banner.status.humanize %>
      </span>
          </div>
        </div>

        <hr class="my-4">

        <div class="d-flex gap-2 mt-4 justify-content-center">
          <%= link_to 'Back to Banners', admins_banners_path, class: 'btn btn-outline-secondary rounded-pill' %>
          <%= link_to 'Edit Banner', edit_admins_banner_path(@banner), class: 'btn btn-outline-warning rounded-pill' %>
          <%= button_to 'Delete Banner', admins_banner_path(@banner), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger rounded-pill' %>
        </div>
      </div>
    </div>
  </div>
</div>
