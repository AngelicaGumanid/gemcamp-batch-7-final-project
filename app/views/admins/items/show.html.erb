<h1>Item Details</h1>

<div class="item-details">
  <p><strong>Name:</strong> <%= @item.name %></p>

  <% if @item.image.present? %>
    <p><strong>Image:</strong></p>
    <%= image_tag(@item.image.url, size: "300x300") %>
  <% else %>
    <p><strong>Image:</strong> No image available</p>
  <% end %>

  <p><strong>Quantity:</strong> <%= @item.quantity %></p>
  <p><strong>Minimum Tickets:</strong> <%= @item.minimum_tickets %></p>
  <p><strong>Batch Count:</strong> <%= @item.batch_count %></p>
  <p><strong>Status:</strong> <%= @item.status.capitalize %></p>
  <p><strong>Online At:</strong> <%= @item.online_at&.strftime('%d %B %Y %I:%M %p') || 'N/A' %></p>
  <p><strong>Offline At:</strong> <%= @item.offline_at&.strftime('%d %B %Y %I:%M %p') || 'N/A' %></p>
  <p><strong>Start At:</strong> <%= @item.start_at&.strftime('%d %B %Y %I:%M %p') || 'N/A' %></p>
  <p><strong>Deleted At:</strong> <%= @item.deleted_at&.strftime('%d %B %Y %I:%M %p') || 'Not Deleted' %></p>
</div>

<%= link_to 'Back to Items', admins_items_path, class: 'btn btn-outline-secondary' %>
<%= link_to 'Edit Item', edit_admins_item_path(@item), class: 'btn btn-outline-warning' if @item.deleted_at.nil? %>
<%= button_to 'Delete Item', admins_item_path(@item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' if @item.deleted_at.nil? %>