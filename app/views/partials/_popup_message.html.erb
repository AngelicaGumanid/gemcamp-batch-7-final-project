<% if notice.present? %>
  <p class="notice" id="notice"><%= notice %></p>
  <script>
      alert('<%= j notice %>');
  </script>
<% end %>

<% if alert.present? %>
  <p class="alert" id="alert"><%= alert %></p>
  <script>
      alert('<%= j alert %>');
  </script>
<% end %>

<script>
    setTimeout(function () {
        var notice = document.getElementById('notice');
        if (notice) {
            notice.style.display = 'none';
        }
        var alert = document.getElementById('alert');
        if (alert) {
            alert.style.display = 'none';
        }
    }, 3000);
</script>