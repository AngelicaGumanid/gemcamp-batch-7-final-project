<%#= stylesheet_link_tag "locations", "data-turbo-track": "reload" %>

<%= render 'layouts/navbar' %>

<section class="vh-100 d-flex align-items-center locations-section">
  <div class="container h-100 d-flex align-items-center justify-content-center">

    <div class="container mt-5">

      <div class="d-flex align-items-center mb-4">
        <%= link_to clients_locations_path, class: 'btn btn-outline-secondary btn-sm me-3' do %>
          <i class='bx bx-arrow-back'></i> Back to Addresses
        <% end %>
      </div>

      <h1 class="mb-4 text-center">New Address</h1>

      <%= form_for(@location, url: clients_locations_path, method: :post, html: { multipart: true }) do |f| %>
        <% if @location.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% @location.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="col-md-6">
            <%= f.label :phone_number, class: 'form-label' %>
            <%= f.telephone_field :phone_number, class: 'form-control' %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :street_address, class: 'form-label' %>
          <%= f.text_field :street_address, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :genre, class: 'form-label' %>
          <%= f.select :genre, Location.genres.keys.map { |k| [k.humanize, k] }, {}, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :remark, class: 'form-label' %>
          <%= f.text_area :remark, class: 'form-control' %>
        </div>

        <div class="mb-3 form-check">
          <%= f.check_box :is_default, class: 'form-check-input', id: 'defaultCheck' %>
          <%= f.label :is_default, 'Set as default address', class: 'form-check-label' %>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.submit 'Save Location', class: 'btn btn-primary px-4 py-2' %>
        </div>
      <% end %>

    </div>
  </div>
</section>

<%= render 'layouts/footer' %>
