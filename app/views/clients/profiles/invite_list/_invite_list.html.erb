<div class="container mt-4">
  <h3 class="mb-4">Invited Members</h3>

  <% if @invites.present? %>
    <% @invites.each do |invite| %>
      <div class="col-12 col-md-10 col-lg-8 mt-4">
        <div class="card shadow-lg border-0 h-100 profile-card">
          <div class="card-body p-4 d-flex flex-column">
            <p class="small mb-2">
              <i class="fas fa-user fa-lg"></i>
              <span class="mx-2 text-muted">|</span>
              <strong>Username:</strong> <%= invite.username %>
            </p>
            <p class="small mb-2">
              <i class="far fa-envelope fa-lg"></i>
              <span class="mx-2 text-muted">|</span>
              <strong>Email:</strong> <%= invite.email %>
            </p>
            <p class="small mb-2">
              <i class="far fa-calendar-alt fa-lg"></i>
              <span class="mx-2 text-muted">|</span>
              <strong>Joined At:</strong> <%= invite.created_at.strftime("%B %d, %Y %H:%M") %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="mt-4">
      <%= paginate @invites %>
    </div>
  <% else %>
    <p class="text-center">You have not invited any members yet.</p>
  <% end %>
</div>