<h2>Order History</h2>
<% @orders.each do |order| %>
  <div class="order">
    <p><strong>Serial Number:</strong> <%= order.serial_number %></p>
    <p><strong>Amount:</strong> <%= number_to_currency(order.amount) %></p>
    <p><strong>Coins:</strong> <%= order.coins %></p>
    <p><strong>Created At:</strong> <%= order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>
    <p><strong>State:</strong> <%= order.state.capitalize %></p>
  </div>
<% end %>

