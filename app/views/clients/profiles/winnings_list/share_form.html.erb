<div class="container mt-4">
  <h3 class="mb-4">Share Your Winning</h3>

  <%= form_with model: @winner, url: share_clients_profiles_winnings_list_path(@winner), method: :patch, multipart: true do |f| %>

    <div class="form-group">
      <%= f.label :picture, "Upload Image" %>
      <%= f.file_field :picture, accept: 'image/*', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :comment, "Message" %>
      <%= f.text_area :comment, rows: 4, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Share", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>