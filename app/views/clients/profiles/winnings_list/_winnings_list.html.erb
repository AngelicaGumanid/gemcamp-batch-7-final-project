<div class="container mt-4">
  <h3 class="mb-4">Winnings History</h3>

  <div class="row">
    <% @winnings.each do |winner| %>
      <div class="col-12 col-md-10 col-lg-8 mt-4">
        <div class="card shadow-lg border-0 h-100 profile-card">
          <div class="card-body p-4 d-flex flex-column">
            <p class="small mb-2">
              <i class="fas fa-gift fa-lg"></i>
              <span class="mx-2 text-muted">|</span>
              <strong>Item:</strong> <%= winner.item.name %>
            </p>
            <p class="small mb-2">
              <i class="fas fa-tags fa-lg"></i>
              <span class="mx-2 text-muted">|</span>
              <strong>Batch Count:</strong> <%= winner.item_batch_count %>
            </p>
            <p class="small mb-2">
              <i class="far fa-money-bill-alt fa-lg"></i>
              <span class="mx-2 text-muted">|</span>
              <strong>Price:</strong> <%= number_to_currency(winner.price) %>
            </p>
            <p class="small mb-2">
              <i class="far fa-calendar-alt fa-lg"></i>
              <span class="mx-2 text-muted">|</span>
              <strong>Won At:</strong> <%= winner.created_at.strftime('%B %d, %Y') %>
            </p>

            <div class="d-flex justify-content-between align-items-center">
              <% if winner.state == 'won' %>
                <%= link_to 'Claim Prize', edit_clients_profiles_winnings_list_path(winner), class: 'btn btn-success' %>
              <% elsif winner.state == 'claimed' %>
                <span class="badge bg-success">Prize Claimed</span>
              <% elsif winner.state == 'delivered' %>
                <%= link_to 'Share Prize', share_clients_profiles_winnings_list_path(winner), class: 'btn btn-info' %>
              <% elsif winner.state == 'shared' %>
                <span class="badge bg-info">Shared</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>