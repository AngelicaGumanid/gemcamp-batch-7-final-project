<%= stylesheet_link_tag "client_home.css", "data-turbo-track": "reload" %>

<%= render 'layouts/navbar' %>

<div class="container-fluid py-2">
  <div class="client-homepage ">

    <div class="banner-image">
      <div id="bannerCarousel" class="carousel slide banner-carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag "1.png", class: "d-block w-100", alt: "Banner 1" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "2.png", class: "d-block w-100", alt: "Banner 2" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "3.png", class: "d-block w-100", alt: "Banner 3" %>
          </div>
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>

    <div class="announcement">
      <h3>Announcement:</h3>
    </div>

    <div class="feedback-section">
      <div class="section-header">Winners Feedback</div>
      <div class="feedback-images">
        <div class="image">Image 1</div>
        <div class="image">Image 2</div>
        <div class="image">Image 3</div>
        <div class="more">More...</div>
      </div>
    </div>

    <div class="coming-soon-section">
      <div class="section-header">Coming Soon</div>
      <div class="coming-soon-images">
        <div class="image">Image 1</div>
        <div class="image">Image 2</div>
        <div class="image">Image 3</div>
        <div class="more">More...</div>
      </div>
    </div>
  </div>
</div>

<%= render 'layouts/footer' %>

